# Digital Twin Configuration

# =============================================================================
# Data Paths
# =============================================================================
DATA_DIR=./data
STORAGE_DIR=./storage

# =============================================================================
# Qdrant Configuration
# =============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=digital_twin

# =============================================================================
# Embedding Model
# =============================================================================
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# LLM Configuration
# =============================================================================
# Provider: gpt4all | openai | anthropic
LLM_PROVIDER=gpt4all

# GPT4All (local) - default
GPT4ALL_MODEL=mistral-7b-instruct-v0.1.Q4_0.gguf

# OpenAI (optional - requires API key)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo

# Anthropic (optional - requires API key)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# RAG Configuration
# =============================================================================
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K=5

# =============================================================================
# UI Configuration
# =============================================================================
STREAMLIT_PORT=8501
